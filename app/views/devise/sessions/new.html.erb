<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <nav>
  <div class='back-btn'> 
  <%= link_to('<', unauthenticated_root_path) %> 
  </div>
  <h1>Login</h1>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
</nav>

  <div class="field">
    <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field check-box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  
<% end %>

<%= render "devise/shared/links" %>
